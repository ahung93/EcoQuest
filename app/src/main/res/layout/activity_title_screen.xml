<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.regular.ecoquest.TitleScreen"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/home_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="0dp"
            android:id="@+id/ecochallenge_logo"
            android:src="@drawable/eco_challenge_logo"
            android:layout_above="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:contentDescription="logo"
            android:adjustViewBounds="true"
            android:maxWidth="170dp"
            android:layout_weight="0.4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="A fun way to live sustainably"
            android:id="@+id/textView9"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.05"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Challenge yourself to live better"
            android:id="@+id/textView"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:layout_weight="0.05"
            android:gravity="center" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.125"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Sign in with Facebook"
            android:id="@+id/titlescreen_button_facebook"
            android:width="250dp"
            android:layout_below="@+id/textView9"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:background="#3d9e95"
            android:textColor="#ffffff"
            android:layout_weight="0.075" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="OR"
            android:id="@+id/textView10"
            android:layout_below="@+id/titlescreen_button_facebook"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:layout_weight="0.075"
            android:gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Email"
            android:id="@+id/titlescreen_button_email"
            android:width="150dp"
            android:layout_below="@+id/titlescreen_button_facebook"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:background="#3d9e95"
            android:textColor="#ffffff"
            android:singleLine="true"
            android:layout_weight="0.075" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"/>
    </LinearLayout>

</RelativeLayout>
