<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="23hrs left"
        android:id="@+id/challenge_item_remaining_time"
        android:layout_weight="0.25"
        android:gravity="center_vertical"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:background="#c8e0c3">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center">

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.10"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Take the Bus"
                android:id="@+id/challenge_item_title"
                android:gravity="left|center_vertical"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="0.7"
                android:textColor="#134f09"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2pts"
                android:id="@+id/textView7"
                android:gravity="center"
                android:layout_weight="0.05"
                android:textColor="#134f09"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="pts"
                android:id="@+id/challenge_item_points"
                android:gravity="center"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="0.09"
                android:textColor="#134f09"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.10"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Description"
                android:id="@+id/challenge_item_description"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:textColor="#134f09"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.20"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>