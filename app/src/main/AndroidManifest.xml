<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.regular.ecoquest" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TitleScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Challenge"
            android:label="@string/title_activity_challenge" >
        </activity>
        <activity
            android:name=".ChallengeOpen"
            android:label="@string/title_activity_challenge_open" >
        </activity>
        <activity
            android:name=".ChallengeListCurrent"
            android:label="@string/title_activity_challenge_list_current" >
        </activity>
        <activity
            android:name=".ChallengeCompleted"
            android:label="@string/title_activity_challenge_completed" >
        </activity>
        <activity
            android:name=".ChallengeInProgress"
            android:label="@string/title_activity_challenge_in_progress" >
        </activity>
        <activity
            android:name=".FirstChallenge"
            android:label="@string/title_activity_first_challenge" >
        </activity>
        <activity
            android:name=".ChallengeFailedActivity"
            android:label="@string/title_activity_challenge_failed" >
        </activity>
    </application>

</manifest>
